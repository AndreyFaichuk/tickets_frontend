FROM node:20 AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . . 
COPY .env.prod .env

RUN node --max-old-space-size=4096 npm run build

FROM nginx AS prod
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
COPY ./ssl /etc/nginx/ssl

EXPOSE 80
EXPOSE 443

CMD ["nginx", "-g", "daemon off;"]
