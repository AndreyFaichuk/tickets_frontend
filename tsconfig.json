{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "lib": ["es2015","es2017","es2019", "ES5", "ES6","es2020", "es2022", "dom"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["@testing-library/jest-dom"],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["./src/components/shared/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@stores/*": ["./src/stores/*"],
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@api/*": ["./src/api/*"],
      "@assests/*": ["./src/assests/*"],
      "@constants": ["./src/constants.tsx"],
      "@types": ["./src/types.ts"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
